<head>
  <title> <%@title = "New Movie"%> </title>
</head>



<body class="bg">

  <div class="container">
    <div class="row">
      <div class="col-md-7">
        <h1 id="enter">Enter Movie</h1>
      </div>
    </div>
  </div>


  <section id="newmoviesubmit">
    <form method="post" action="/movies/new">

      <div class="container">
        <div class="row">
          <div class="col-md-7">
            <label for="title">Title:</label>
            <input type="text" id="title" name="title" placeholder="Title">
          </div>
        </div><br>

      
        <div class="row">
          <div class="col-md-7">
            <label for="year">Year:</label>
            <input type="integer" id="year" name="year" placeholder="Year">
          </div>  
        </div><br>

        <div class="row">
          <div class="col-md-7">
            <label for="gross">Gross:</label>
            <input type="text" id="gross" name="gross" placeholder="Gross">
          </div>
        </div><br>

        <div class="row">
          <div class="col-md-7">    
            <label for="poster">Poster:</label>
            <input type="text" id="poster" name="poster" placeholder="Poster">
          </div>
        </div><br>

        <div class="row">
          <div class="col-md-7">
            <label for="trailer">Trailer:</label>
            <input type="text" id="trailer" name="trailer" placeholder="Trailer">
          </div>
        </div>
      </div><br>
      
      <div id="submitadd">
        <button type="submit" class="btn btn-info">Add</button>
      </div>




  </section>

</body>

